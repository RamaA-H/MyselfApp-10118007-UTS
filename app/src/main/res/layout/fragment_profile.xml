<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient1"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_gradient">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/foto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama   : Rama Al Halik"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Umur    : 20 Tahun"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Alamat : Dago Barat 11E"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relaitve2"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_gradient">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/account_contactme"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="36dp"
        android:textSize="16sp"
        android:onClick="buka_call"
        android:text="@string/account_phone_number"
        android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="250dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/account_findme"
            android:textColor="@color/white" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:onClick="buka_map"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="250dp"
        app:srcCompat="@drawable/pin" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/bg_gradient">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Media"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="135dp"
            />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:onClick="buka_ig"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="250dp"
        app:srcCompat="@drawable/instagram" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:onClick="buka_fb"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/facebook" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:onClick="buka_email"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"

        app:srcCompat="@drawable/mail" />

</RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient"
        android:onClick="buka_dialog"
        android:text="ABOUT APPS"
        android:textColor="@color/white"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="550dp"
        />

</RelativeLayout>